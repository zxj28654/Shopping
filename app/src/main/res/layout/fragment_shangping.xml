<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/ll_shang"
    android:layout_height="match_parent"
    tools:context=".classification.gooddslink.ShangpingFragment">

    <!-- TODO: Update blank fragment layout -->

<com.youth.banner.Banner
    android:layout_width="match_parent"
    android:id="@+id/banner_link"
    android:layout_height="@dimen/dp_150"/>
    <TextView
        android:background="@color/bai"
        android:layout_width="match_parent"
        android:id="@+id/tv_link"
        android:text="5555555555555555555"
        android:layout_marginLeft="@dimen/dp_8"
        android:textSize="@dimen/sp_13"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"/>
    <TextView
        android:background="@color/bai"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="match_parent"
        android:id="@+id/tv2_link"
        android:gravity="bottom"
        android:text="11111"
        android:textColor="#F44336"
        android:textSize="@dimen/sp_13"
        android:layout_height="@dimen/dp_25"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bai"
        android:id="@+id/xuanze"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_35">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_linkx"
            android:hint="已选 "
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="@dimen/dp_270"
            android:id="@+id/tv_linkxt"
            android:text="2222222fafffa"
            android:singleLine="true"
            android:layout_toRightOf="@id/tv_linkx"
            android:layout_marginLeft="@dimen/dp_8"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/di_linkx"
            android:hint="..."
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/dp_8"
            android:textSize="@dimen/sp_25"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="@color/bai"
            android:layout_height="65dp">
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_gravity="center"
                   android:background="@drawable/dibu1"
                    android:id="@+id/iv_link_dibu"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="分享"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:background="@drawable/dibu2"
                    android:id="@+id/iv_link_dibu1"
                    android:layout_height="@dimen/dp_30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="购物车"
                    android:textSize="@dimen/sp_15"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:id="@+id/jia"
                android:textColor="@color/bai"
                android:textSize="@dimen/sp_25"
                android:text="加入购物车"
                android:background="#F44336"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>