<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".activity.CreateActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toobar_class"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:background="#03A9F4"
        android:layout_height="@dimen/dp_43">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_7"
                android:text="注册"
                android:textColor="#eeeeee"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/sp_11"
                android:text="            "
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_25"
        app:cardCornerRadius="@dimen/dp_8"
        android:layout_height="@dimen/dp_200">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/icon_phone"
                    android:layout_height="@dimen/dp_30"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_13"
                    android:hint="请输入手机号"
                    android:id="@+id/et_phone"
                    android:background="@null"
                    android:layout_marginTop="@dimen/dp_7"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_width="@dimen/dp_0_5"
                    android:background="#50000000"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/dp_40"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/yanzheng"
                    android:gravity="center"
                    android:textColor="#FF03A9F4"
                    android:text="  获取验证码  "
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#50000000"
                android:layout_height="@dimen/dp_0_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/icon_verify_code"
                    android:layout_height="@dimen/dp_30"/>
                <EditText
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_13"
                    android:hint="请输入短信验证码"
                    android:background="@null"
                    android:id="@+id/et_yanma"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#50000000"
                android:layout_height="@dimen/dp_0_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/icon_pwd"
                    android:layout_height="@dimen/dp_30"/>
                <EditText
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_13"
                    android:hint="请输入密码(6~20位字母或数字)"
                    android:background="@null"
                    android:id="@+id/et_psw"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="#50000000"
                android:layout_height="@dimen/dp_0_1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/icon_pwd"
                    android:layout_height="@dimen/dp_30"/>
                <EditText
                    android:layout_width="match_parent"
                    android:textSize="@dimen/sp_13"
                    android:hint="请再次输入密码"
                    android:background="@null"
                    android:id="@+id/et_repsw"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_25"
        android:id="@+id/bt_create"
        android:textSize="@dimen/sp_20"
        android:text="注册"
        android:background="@drawable/shape_button"
        android:textColor="@color/cardview_light_background"
        android:layout_height="@dimen/dp_45"/>

</LinearLayout>