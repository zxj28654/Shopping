<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_107"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="@dimen/dp_79"
        android:layout_height="@dimen/dp_70">
        <ImageView
            android:layout_width="@dimen/dp_79"
            android:id="@+id/iv"
            android:layout_height="@dimen/dp_70"/>

        <jp.shts.android.library.TriangleLabelView
            style="@style/WrapWrap"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            app:backgroundColor="#DA0303"
            app:primaryText="折扣"
            app:primaryTextSize="10.0sp"
            app:labelTopPadding="10.0dip"
            app:labelCenterPadding="0.0dip"
            app:labelBottomPadding="5.0dip"
            app:corner="rightTop"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textColor="#F43659"
        android:textSize="@dimen/sp_12"
        android:text="¥123.00"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_10"
        android:id="@+id/tv2"
        android:hint="$1000.00"
        android:layout_height="wrap_content"/>
</LinearLayout>