<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".GoodsLinkActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:background="@color/lan"
            android:id="@+id/toobar_goods"
            app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:layout_height="@dimen/dp_45">
            <com.google.android.material.tabs.TabLayout
                android:layout_width="@dimen/dp_100"
                android:id="@+id/tab_link"
                app:tabSelectedTextColor="@color/bai"
                android:layout_marginLeft="@dimen/dp_80"
                android:layout_height="match_parent"/>
        </androidx.appcompat.widget.Toolbar>

    </RelativeLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/vp_link"
        android:layout_height="0dp"/>

</LinearLayout>