<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:layout_width="@dimen/dp_25"
        android:id="@+id/cb_car"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
        android:layout_height="@dimen/dp_25"/>

    <ImageView
        android:layout_width="@dimen/dp_70"
        android:layout_toRightOf="@id/cb_car"
        android:id="@+id/iv_car"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_height="@dimen/dp_70"/>
    <TextView
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_13"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_car"
        android:layout_marginTop="@dimen/dp_12"
        android:singleLine="true"
        android:id="@+id/car_title"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="match_parent"
        android:textSize="@dimen/sp_13"
        android:layout_below="@id/car_title"
        android:layout_toRightOf="@id/iv_car"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/car_title_xuan"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_13"
        android:layout_below="@id/car_title_xuan"
        android:layout_toRightOf="@id/iv_car"
        android:layout_marginTop="@dimen/dp_25"
        android:id="@+id/car_price"
        android:textColor="#F44336"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="@dimen/dp_120"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/car_price"
        android:layout_alignBottom="@id/car_price"
        android:layout_marginLeft="@dimen/dp_100"
        android:background="@drawable/shape_kuang"
        android:layout_height="@dimen/dp_35">

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:textSize="@dimen/sp_25"
            android:text="-"
            android:gravity="center"
            android:id="@+id/jian"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_weight="2"
            android:textSize="@dimen/sp_15"
            android:text="8"
            android:background="@drawable/shape_pop_shu"
            android:gravity="center"
            android:id="@+id/shu"
            android:layout_height="match_parent"/>
        <TextView
            android:textSize="@dimen/sp_20"
            android:text="+"
            android:gravity="center"
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:id="@+id/jia"
            android:layout_height="match_parent"/>

    </LinearLayout>
</RelativeLayout>