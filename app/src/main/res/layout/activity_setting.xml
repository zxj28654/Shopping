<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".activity.SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:id="@+id/toobar_class"
        app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:background="#03A9F4"
        android:layout_height="@dimen/dp_43">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="10"
                android:textSize="@dimen/sp_20"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_7"
                android:text="设置"
                android:textColor="#eeeeee"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="@color/cardview_light_background"
                android:textSize="@dimen/sp_11"
                android:text=""
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/mine_guanli0"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="收货管理"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_265"
            android:src="@drawable/icon_arrow"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/mine_guanli1"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="反馈意见"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_265"
            android:src="@drawable/icon_arrow"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/mine_guanli2"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:text="关于"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_293"
            android:src="@drawable/icon_arrow"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_25"
        android:id="@+id/bt_join"
        android:textSize="@dimen/sp_20"
        android:text="退出登录"
        android:background="#03A9F4"
        android:textColor="@color/cardview_light_background"
        android:layout_height="@dimen/dp_45"/>

</LinearLayout>