<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
   <androidx.appcompat.widget.Toolbar
       android:layout_width="match_parent"
       android:id="@+id/toobar"
        android:background="#03A9F4"
       android:layout_height="@dimen/dp_43">
      <RelativeLayout
          android:layout_width="wrap_content"
          android:id="@+id/toobar_sousuo"
          android:layout_height="wrap_content">
          <EditText
              android:layout_width="@dimen/dp_280"
              android:enabled="false"
              android:background="@drawable/shape_toobar_sousuo"
              android:layout_height="@dimen/dp_26"/>
          <ImageView
             android:layout_marginTop="@dimen/dp_3"
              android:layout_width="@dimen/dp_24"
              android:src="@drawable/ic_search"
              android:layout_marginLeft="@dimen/dp_15"
              android:layout_height="@dimen/dp_20"/>
          <TextView
              android:layout_width="wrap_content"
              android:textSize="@dimen/sp_16"
              android:text="搜索商品/品类"
              android:textColor="#eeeeee"
              android:layout_marginLeft="@dimen/dp_50"
              android:layout_height="wrap_content"/>
      </RelativeLayout>
       <ImageView
           android:layout_width="@dimen/dp_43"
           android:id="@+id/toobar_scan"
           android:layout_marginLeft="@dimen/dp_25"
           android:src="@drawable/icon_scan"
           android:layout_height="@dimen/dp_35"/>
   </androidx.appcompat.widget.Toolbar>

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:id="@+id/banner"
        android:layout_height="@dimen/dp_142"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/news_shape"
        android:layout_height="@dimen/dp_24">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:src="@drawable/ic_laba"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_height="@dimen/dp_20"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#F11606"
            android:text=" 公告"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
        <TextView
          android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textSize="@dimen/dp_13"
            android:text=" | "
            android:layout_height="wrap_content"/>
        <ViewFlipper
            android:id="@+id/marquee_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoStart="true"
            android:flipInterval="2000"
            android:inAnimation="@anim/anim_marquee_in"
            android:outAnimation="@anim/anim_marquee_out" >
        </ViewFlipper>
    </LinearLayout>
     <androidx.cardview.widget.CardView
         android:layout_marginTop="@dimen/dp_2"
         android:layout_width="match_parent"
         app:cardUseCompatPadding="true"
         android:layout_height="@dimen/dp_135" >
         <LinearLayout
             android:layout_width="match_parent"
             android:orientation="vertical"
             android:layout_height="wrap_content">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:orientation="horizontal"
                 android:layout_height="match_parent">
                 <ImageView
                     android:layout_marginTop="@dimen/dp_2"
                     android:layout_marginLeft="@dimen/dp_8"
                     android:layout_width="@dimen/dp_35"
                     android:src="@drawable/icon_special"
                     android:layout_height="@dimen/dp_20"/>
                 <TextView
                     android:layout_width="wrap_content"
                     android:text=" 火爆进行中"
                     android:textColor="#000000"
                     android:layout_marginTop="@dimen/dp_2"
                     android:textStyle="bold"
                     android:textSize="@dimen/dp_15"
                     android:layout_height="wrap_content"/>
             </LinearLayout>
             <androidx.recyclerview.widget.RecyclerView
                 android:layout_width="match_parent"
                 android:id="@+id/rcy"
                 android:layout_marginTop="@dimen/dp_2"
                 android:layout_marginLeft="@dimen/dp_8"
                 android:layout_marginRight="@dimen/dp_8"
                 android:layout_height="match_parent"/>
         </LinearLayout>
     </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/home_container_bg"
        android:layout_height="match_parent">


        <me.crosswall.lib.coverflow.core.PagerContainer
            android:id="@+id/mTopicContainer"
            style="@style/MatchMatch"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_gravity="center">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mTopicPager"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_160"
                android:overScrollMode="never"/>
        </me.crosswall.lib.coverflow.core.PagerContainer>
    </LinearLayout>

</LinearLayout>