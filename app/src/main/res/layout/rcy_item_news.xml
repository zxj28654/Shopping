<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_61">

    <ImageView
        android:layout_width="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:id="@+id/iv_rcy_news"
        android:layout_height="@dimen/dp_50"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/iv_rcy_news"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="15sp"
        android:id="@+id/tvtitle_rcy_news"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvtitle_rcy_news"
        android:layout_alignLeft="@id/tvtitle_rcy_news"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_gongxi"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_alignParentBottom="true"
        android:id="@+id/tvshijian_rcy_news"
        android:textSize="11sp"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:background="#70000000"
        android:layout_below="@id/iv_rcy_news"
        android:layout_height="@dimen/dp_0_1"/>
</RelativeLayout>