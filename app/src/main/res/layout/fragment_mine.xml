<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#20000000"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_me_header"
        android:layout_height="@dimen/dp_160">

        <ImageView
            android:src="@drawable/icon_default_user"
            android:layout_width="@dimen/dp_60"
            android:id="@+id/iv_mine_tou"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="@dimen/dp_65"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_mine_join"
            android:textColor="@color/bai"
            android:textSize="@dimen/sp_18"
            android:text="登录/注册"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_toRightOf="@id/iv_mine_tou"
           android:layout_alignBottom="@id/iv_mine_tou"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/mine_wait_pay"
            android:gravity="center"
            android:layout_height="@dimen/dp_55">

            <ImageView
                android:layout_width="@dimen/dp_35"
                android:src="@drawable/icon_order_wait_pay"
                android:layout_height="@dimen/dp_35"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="待付款"
                android:textSize="@dimen/dp_12"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/mine_confirm"
            android:gravity="center"
            android:layout_height="@dimen/dp_55">

            <ImageView
                android:layout_width="@dimen/dp_35"
                android:src="@drawable/icon_order_wait_confirm"
                android:layout_height="@dimen/dp_35"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="待收货"
                android:textSize="@dimen/dp_12"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/mine_completed"
            android:gravity="center"
            android:layout_height="@dimen/dp_55">

            <ImageView
                android:layout_width="@dimen/dp_35"
                android:src="@drawable/icon_order_completed"
                android:layout_height="@dimen/dp_35"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="已完成"
                android:textSize="@dimen/dp_12"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/mine_order"
            android:gravity="center"
            android:layout_height="@dimen/dp_55">

            <ImageView
                android:layout_width="@dimen/dp_35"
                android:src="@drawable/icon_order"
                android:layout_height="@dimen/dp_35"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="我的订单"
                android:textSize="@dimen/dp_12"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/mine_guanli"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_address"
            android:layout_height="@dimen/dp_35"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="收货管理"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_239"
            android:src="@drawable/icon_arrow"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_marginTop="@dimen/dp_1_5"
        android:id="@+id/mine_share"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_share"
            android:layout_height="@dimen/dp_35"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="分享"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_266"
            android:src="@drawable/icon_arrow"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/bai"
        android:layout_marginTop="@dimen/dp_1_5"
        android:id="@+id/mine_seting"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_setting"
            android:layout_height="@dimen/dp_35"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="设置"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:textSize="@dimen/dp_14"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_266"
            android:src="@drawable/icon_arrow"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_20"/>
    </LinearLayout>
</LinearLayout>