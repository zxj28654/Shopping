<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03000000"
    android:orientation="vertical"
    tools:context=".activity.MyCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/lan"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_mycenter"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="个人中心"
            android:textColor="@color/bai"
            android:textSize="@dimen/sp_25" />

        <TextView
            android:id="@+id/baocun_mycenter"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="保存"
            android:textColor="@color/bai"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_guanli2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_15"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="头像"
            android:textSize="@dimen/dp_14" />

        <ImageView
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:id="@+id/iv_tou_mcenter"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_205"
            android:src="@drawable/icon_default_user" />
        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_gravity="center"
            android:src="@drawable/icon_arrow"
            android:id="@+id/mycenter_toux"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_height="@dimen/dp_30"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_guanli3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="昵称"
            android:textSize="@dimen/dp_14" />

       <EditText
           android:layout_width="wrap_content"
           android:text="1234567"
           android:id="@+id/mycenter_name"
           android:layout_marginLeft="@dimen/dp_240"
           android:layout_marginRight="@dimen/dp_15"
           android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_guanli4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="性别"
            android:textSize="@dimen/dp_14" />

      <RadioGroup
          android:layout_width="wrap_content"
          android:orientation="horizontal"
          android:id="@+id/radiogr"
          android:layout_height="wrap_content">


          <RadioButton
              android:layout_marginLeft="@dimen/dp_235"
              android:layout_width="@dimen/dp_25"
             android:layout_marginTop="@dimen/dp_10"
              android:id="@+id/mycenter_nan"
              android:layout_height="@dimen/dp_25"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="男"
              android:layout_marginTop="@dimen/dp_10"
              android:layout_height="wrap_content"/>
          <RadioButton
              android:layout_width="@dimen/dp_25"
              android:layout_marginTop="@dimen/dp_10"
              android:id="@+id/mycenter_nv"
              android:layout_height="@dimen/dp_25"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="女"
              android:layout_marginTop="@dimen/dp_10"
              android:layout_height="wrap_content"/>
      </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_guanli5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="手机"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:text="1234567"
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/mycenter_phone"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_240"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/mine_guanli6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_5"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="签名"
            android:textSize="@dimen/dp_14" />

        <EditText
            android:layout_width="wrap_content"
           android:hint="请填写你的签名"
            android:id="@+id/mycenter_qianming"
            android:layout_marginLeft="@dimen/dp_190"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>